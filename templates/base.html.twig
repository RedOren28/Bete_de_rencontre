<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bête de Rencontre{% endblock %}</title>
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href={{asset('css/style.css')}}>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-3 rounded">
            <img src="../logo.jpg" class="navbar-logo" style="height:50px">
            <a class="navbar-brand mr-auto" href="{{path('app_home')}}">Bête de Rencontre</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link col align-middle link" href="{{ path('app_annonce')}}">Annonces</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link col align-middle link" href="{{ path('app_annonce_create')}}">Créer une annonce</a>
                    </li>
                </ul>
                <div class="my-2 my-lg-0">
                    {% if app.user == null %}
                    <button class="btn btn-success mx-1" type="button"><a class="nav-link" href="{{ path('app_register')}}">S'inscrire </a></button>
                    <button class="btn btn-success mx-1" type="button"><a class="nav-link" href="{{ path('app_login')}}">Se connecter </a></button>
                    {% else %}
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link col align-middle link" href="{{ path('app_mes_annonces')}}">Mes annonces</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link col align-middle link" href="{{ path('app_profile')}}">Profil</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link col align-middle link" href="{{ path('admin') }}">Admin</a>
                            </li>
                        {% endif %}
                        <li>
                            <button class="btn btn-outline-success mx-1" type="button"><a class="nav-link" href="{{ path('app_logout')}}">Se déconnecter</a></button>
                        </li>
                    </ul>    
                    {% endif %}
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
